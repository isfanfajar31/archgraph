@startuml

class CodeAnalyzer {
  +analyze(self, exclude_patterns): None
  +get_class_info(self, module_name, class_name): dict[str, Any]
  +get_dependencies(self): dict[str, set[str]]
  +get_package_structure(self): dict[str, Any]
}

class DiagramGenerator {
  +generate(self): nx.DiGraph
}

class ClassDiagramGenerator {
  +generate(self, include_methods, include_attributes, include_private, max_depth): nx.DiGraph
}

class DependencyGraphGenerator {
  +generate(self, group_by_package, include_external, max_depth): nx.DiGraph
}

class CallGraphGenerator {
  +generate(self, focus_module, include_external, max_depth): nx.DiGraph
}

class PackageStructureGenerator {
  +generate(self, max_depth, show_empty): nx.DiGraph
}

class DiagramExporter {
  +export(self, graph, output_path): None
  +to_string(self, graph): str
}

class MermaidExporter {
  +export(self, graph, output_path): None
  +to_string(self, graph): str
}

class PlantUMLExporter {
  +export(self, graph, output_path): None
  +to_string(self, graph): str
}

class GraphVizExporter {
  +export(self, graph, output_path): None
  +to_string(self, graph): str
}

DiagramGenerator --|> abc.ABC
ClassDiagramGenerator --|> DiagramGenerator
DependencyGraphGenerator --|> DiagramGenerator
CallGraphGenerator --|> DiagramGenerator
PackageStructureGenerator --|> DiagramGenerator
DiagramExporter --|> abc.ABC
MermaidExporter --|> DiagramExporter
PlantUMLExporter --|> DiagramExporter
GraphVizExporter --|> DiagramExporter

@enduml